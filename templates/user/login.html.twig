{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    {% if error %}
        {{ error.message }}
    {% endif %}

    <form action="{{ path('login')}}" method="post">
        <input type="text" placeholder="Email" name="_username" value="{{ last_username }}">
        <input type="password" placeholder="Mot de passe" name="_password">

        <button>Connexion</button>
    </form>
{% endblock %}
